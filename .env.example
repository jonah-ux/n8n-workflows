# Environment Variables for Safe AI Agent Communication System
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# SALESMSG (Primary Communication Channel)
# ============================================================================
# Get your API key from: https://app.salesmsg.com/settings/api
SALESMSG_API_KEY=your_salesmsg_api_key_here
SALESMSG_BASE_URL=https://api.salesmsg.com/v1
# Your Salesmsg phone number (E.164 format: +1XXXXXXXXXX)
SALESMSG_FROM_NUMBER=+1234567890

# ============================================================================
# TELEGRAM (Fallback Communication Channel)
# ============================================================================
# Create a bot: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Your Telegram chat ID (optional, can be set in config/allowlists.yaml instead)
# To find: Message your bot "/start" then check logs or use getUpdates API
TELEGRAM_DEFAULT_CHAT_ID=

# ============================================================================
# DATABASE (Supabase PostgreSQL)
# ============================================================================
# Get from: https://app.supabase.com/project/_/settings/database
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-us-west-1.pooler.supabase.com:5432/postgres

# ============================================================================
# N8N API (for workflow deployment and management)
# ============================================================================
# Get from your n8n instance settings
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://jonahautoshopmedia.app.n8n.cloud

# ============================================================================
# OPTIONAL: Third-party Services
# ============================================================================

# OpenAI (if using GPT models)
OPENAI_API_KEY=

# Anthropic (if using Claude models)
ANTHROPIC_API_KEY=

# HubSpot (if integrating)
HUBSPOT_API_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
NODE_ENV=production

# Port for any local API server
PORT=3000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================================
# SAFETY SETTINGS
# ============================================================================

# Enable/disable safety checks (NEVER disable in production!)
ENABLE_SAFETY_CHECKS=true

# Default approval mode (true = require approval, false = auto-approve allowlisted)
DEFAULT_REQUIRE_APPROVAL=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never hardcode secrets in your code
# 2. Never commit .env to version control
# 3. Rotate API keys regularly (quarterly minimum)
# 4. Use separate keys for dev/staging/production
# 5. Limit API key permissions to minimum required
# 6. Monitor usage in case of key compromise
