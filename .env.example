# Environment Variables for God-Mode Personal Ops System
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# SUPABASE DATABASE (REQUIRED)
# ============================================================================
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# NOTION (REQUIRED - Canonical Knowledge Source)
# ============================================================================
# Create integration: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# N8N (REQUIRED - Workflow Monitoring)
# ============================================================================
# Get from your n8n instance settings
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://jonahautoshopmedia.app.n8n.cloud

# ============================================================================
# HUBSPOT (REQUIRED - CRM Monitoring)
# ============================================================================
# Get from: https://app.hubspot.com/l/settings/integrations/api
HUBSPOT_ACCESS_TOKEN=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================================================
# SALESMSG (REQUIRED - Primary Communication Channel)
# ============================================================================
# Get your API key from: https://app.salesmsg.com/settings/api
SALESMSG_API_KEY=your_salesmsg_api_key_here
SALESMSG_BASE_URL=https://api.salesmsg.com/v1
# Your Salesmsg phone number (E.164 format: +1XXXXXXXXXX)
SALESMSG_FROM_NUMBER=+13204064600

# ============================================================================
# TELEGRAM (REQUIRED - Fallback Communication Channel)
# ============================================================================
# Create a bot: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Your Telegram chat ID (find by messaging bot "/start" and checking logs)
TELEGRAM_DEFAULT_CHAT_ID=your_chat_id_here

# ============================================================================
# OPTIONAL: AI/LLM Services
# ============================================================================
# Only needed if using AI for pattern detection or proposal generation

# OpenAI (if using GPT models)
OPENAI_API_KEY=

# Anthropic (if using Claude models)
ANTHROPIC_API_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Port for any local API server
PORT=3000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Timezone (for quiet hours, daily digest, morning call)
TIMEZONE=America/Chicago

# ============================================================================
# SYSTEM DEFAULTS (Override config/defaults.yaml)
# ============================================================================

# Scan interval in minutes (default: 30)
SCAN_INTERVAL_MINUTES=30

# Daily digest time (HH:MM format, local timezone)
DAILY_DIGEST_TIME=08:00

# Morning call time (HH:MM format, local timezone)
MORNING_CALL_TIME=06:00

# ============================================================================
# SAFETY SETTINGS
# ============================================================================

# Kill switch (set to "true" to stop all agent actions immediately)
KILL_SWITCH=false

# Enable/disable communication (default: true)
COMMS_ENABLED=true

# Enable/disable write operations (default: true)
WRITE_ENABLED=true

# Enable/disable background jobs (default: true)
JOBS_ENABLED=true

# Enable/disable external communications (default: false, MUST be explicit!)
EXTERNAL_COMMS_ENABLED=false

# ============================================================================
# NOTES
# ============================================================================
# 1. Never hardcode secrets in your code
# 2. Never commit .env to version control
# 3. Rotate API keys regularly (quarterly minimum)
# 4. Use separate keys for dev/staging/production
# 5. Limit API key permissions to minimum required
# 6. Monitor usage in case of key compromise
# 7. EXTERNAL_COMMS_ENABLED must remain false unless explicitly needed
# 8. Test kill switch functionality regularly
